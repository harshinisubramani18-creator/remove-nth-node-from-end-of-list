/**
 * Definition for singly-linked list.
 * public class ListNode {
 * int val;
 * ListNode next;
 * ListNode() {}
 * ListNode(int val) { this.val = val; }
 * ListNode(int val, ListNode next) { this.val = val; this.next = next; }
 * }
 */
class Solution {
    public ListNode removeNthFromEnd(ListNode head, int n) {
        int size = 0;
        ListNode temp = head;
        
        // Pass 1: Get the length
        while (temp != null) {
            temp = temp.next;
            size++;
        }
        
        if (size == 1) return null;

        // Reset and calculate steps to the node before target
        temp = head;
        int tempSize = size - n - 1;

        // Handle case where head itself is removed
        if (n == size) {
            return head.next;
        }

        // Pass 2: Move to the node before the target
        while (tempSize > 0) {
            temp = temp.next;
            tempSize--;
        }

        // Skip the Nth node
        if (temp.next != null) {
            temp.next = temp.next.next;
        } else {
            temp.next = null;
        }
        
        return head;
    }
}
